{
    "name": "@loop-crypto/loop-core-sdk",
    "version": "0.2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/LoopCrypto/loop-core-sdk.git"
    },
    "publishConfig": {
        "access": "public"
    },
    "description": "Loop Core SDK",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist",
        "src",
        "*.d.ts"
    ],
    "type": "module",
    "scripts": {
        "build": "tsc -p tsconfig.build.json && tsc-alias",
        "start": "node --loader ts-node/esm src/test.ts",
        "release": "changeset version && changeset publish",
        "pretty": "prettier --write \"**/*.{ts,json}\"",
        "test": "jest",
        "test:unit": "jest __tests__/unit",
        "test:integration": "jest __tests__/integration",
        "test:all": "jest __tests__/unit && jest __tests__/integration"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "axios": "^1.7.9",
        "dotenv": "^17.2.2",
        "ts-node": "^10.9.2",
        "typescript": "5.8.3"
    },
    "devDependencies": {
        "@changesets/changelog-git": "^0.2.1",
        "@changesets/cli": "^2.29.7",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.13.4",
        "eslint": "9.37.0",
        "jest": "^29.7.0",
        "node": "^23.8.0",
        "prettier": "^3.3.2",
        "ts-jest": "^29.2.5",
        "tsc-alias": "^1.8.16",
        "tsconfig-paths": "^4.2.0",
        "typescript-eslint": "8.32.1"
    }
